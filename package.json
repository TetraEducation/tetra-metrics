{
  "name": "tetra-metrics",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "supabase:start": "supabase start --workdir .",
    "supabase:stop": "supabase stop --workdir .",
    "supabase:status": "supabase status --workdir .",
    "db:up": "supabase migration up --local --workdir .",
    "db:reset": "supabase db reset --workdir .",
    "db:dump": "mkdir -p dumps && docker exec supabase_db_tetra-metrics pg_dump -U postgres --schema=public --clean --if-exists postgres 2>&1 | grep -v \"^pg_dump:\" > dumps/dump_$(date +%Y%m%d_%H%M%S).sql",
    "db:dump:gz": "mkdir -p dumps && docker exec supabase_db_tetra-metrics pg_dump -U postgres --schema=public --clean --if-exists postgres 2>&1 | grep -v \"^pg_dump:\" | gzip > dumps/dump_$(date +%Y%m%d_%H%M%S).sql.gz",
    "db:dump:tables": "bash scripts/dump-tables.sh",
    "db:restore": "docker exec -i supabase_db_tetra-metrics psql -U postgres -d postgres <",
    "db:restore:tables": "bash scripts/restore-tables.sh",
    "m:list:local": "supabase migration list --local --workdir .",
    "m:list:remote": "supabase migration list --linked --workdir .",
    "leads:import-base": "ts-node -r tsconfig-paths/register src/scripts/leads/import-base-de-dados.ts",
    "clint:sync": "ts-node -r tsconfig-paths/register src/scripts/clint/sync-contacts.ts",
    "clint:sync:contacts": "ts-node -r tsconfig-paths/register src/scripts/clint/sync-contacts.ts --only-contacts",
    "clint:sync:deals": "ts-node -r tsconfig-paths/register src/scripts/clint/sync-contacts.ts --only-deals",
    "clint:sync:dry": "ts-node -r tsconfig-paths/register src/scripts/clint/sync-contacts.ts --dry-run",
    "activecampaign:sync": "ts-node -r tsconfig-paths/register src/scripts/activecampaign/sync-contacts.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@supabase/supabase-js": "^2.85.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cli-progress": "^3.12.0",
    "csv-parse": "^6.1.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^30.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
